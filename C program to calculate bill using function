#include <stdio.h>

float calculateBill(int units) {
    if (units <= 100)
        return units * 1.5;
    else
        return (100 * 1.5) + (units - 100) * 4;
}

int main() {
    int units;
    printf("Enter units: ");
    scanf("%d", &units);

    printf("Total Bill = %.2f\n", calculateBill(units));
    return 0;
}
