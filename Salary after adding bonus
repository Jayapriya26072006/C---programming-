#include <stdio.h>

int main()
{
    float salary;
    float bonus;
    float totalSalary;

    printf("Enter basic salary: ");
    scanf("%f", &salary);

    printf("Enter bonus amount: ");
    scanf("%f", &bonus);

    totalSalary = salary + bonus;

    printf("Total salary = %.2f\n", totalSalary);

    return 0;
}
