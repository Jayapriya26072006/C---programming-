#include <stdio.h>
#include <math.h>

int main()
{
    float p;
    float r;
    float t;
    float amount;
    float ci;

    printf("Enter principal: ");
    scanf("%f", &p);

    printf("Enter rate: ");
    scanf("%f", &r);

    printf("Enter time: ");
    scanf("%f", &t);

    amount = p * pow((1 + r / 100), t);
    ci = amount - p;

    printf("Compound Interest = %.2f\n", ci);

    return 0;
}
